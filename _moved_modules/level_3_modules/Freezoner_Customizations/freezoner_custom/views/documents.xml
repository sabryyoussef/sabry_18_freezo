<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Simple Document Views - No problematic widgets -->
    <record id="simple_documents_tree_view" model="ir.ui.view">
        <field name="name">Simple Documents Tree</field>
        <field name="model">documents.document</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" string="Document Name" />
                <field name="partner_id" string="Partner" />
                <field name="project_id" string="Project" />
                <field name="folder_id" string="Folder" />
                <field name="owner_id" string="Owner" />
                <field name="create_date" string="Created" />
            </list>
        </field>
    </record>

    <record id="simple_documents_form_view" model="ir.ui.view">
        <field name="name">Simple Documents Form</field>
        <field name="model">documents.document</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="partner_id" />
                        <field name="project_id" />
                        <field name="folder_id" />
                        <field name="owner_id" />
                        <field name="datas" filename="name" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Simple action using only list and form views -->
    <record id="simple_documents_action" model="ir.actions.act_window">
        <field name="name">Project Documents</field>
        <field name="res_model">documents.document</field>
        <field name="view_mode">list,form</field>
        <field name="view_ids"
            eval="[
            (5, 0, 0),
            (0, 0, {'view_mode': 'list', 'view_id': ref('simple_documents_tree_view')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('simple_documents_form_view')})
        ]" />
        <field name="domain">[('project_id', '!=', False)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No documents found for projects
            </p>
        </field>
    </record>

    <!-- Menu item pointing to simple action -->
    <menuitem id="menu_project_documents_simple"
        name="Project Documents"
        parent="project.menu_main_pm"
        action="simple_documents_action"
        sequence="10" />

