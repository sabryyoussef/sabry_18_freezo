    <!-- Keep the form view inheritance as it doesn't cause issues -->
    <record id="document_form_view" model="ir.ui.view">
        <field name="name">documents.document.form</field>
        <field name="model">documents.document</field>
        <field name="inherit_id" ref="documents.document_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='datas']" position="before">
                <field name="type_id"
                    options="{'no_quick_create':True,'no_create_edit':True,'no_create': True}" />
            </xpath>
            <xpath expr="//field[@name='datas']" position="after">
                <field name="issue_date" />
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="replace">
                <field name="partner_ids" invisible="1" />
                <field name="partner_id"
                    options="{'no_quick_create':True,'no_create_edit':True,'no_create': True}"
                    domain="[('id', 'in', partner_ids)]" />
                <field name="type" position="move" />
            </xpath>
            <xpath expr="//field[@name='create_date']" position="before">
                <field name="folder_id" position="move"
                    options="{'no_quick_create':True,'no_create_edit':True,'no_create': True}" />
                <field name="project_id"
                    options="{'no_quick_create':True,'no_create_edit':True,'no_create': True}" />
                <field name="expiration_date" />
            </xpath>
            <xpath expr="//field[@name='folder_id']" position="attributes">
                <attribute name="options">{'no_quick_create':True,'no_create_edit':True,'no_create':
                    True}</attribute>
            </xpath>
            <xpath expr="//field[@name='owner_id']" position="attributes">
                <attribute name="options">{'no_quick_create':True,'no_create_edit':True,'no_create':
                    True}</attribute>
            </xpath>
        </field>
    </record>

    <record id="share_view_form_new_popup" model="ir.ui.view">
        <field name="name">Share Document</field>
        <field name="model">documents.share</field>
        <field name="arch" type="xml">
            <form class="o_share_form">
                <sheet class="o_share_sheet">
                    <group class="o_url_group">
                        <field name="full_url" widget="CopyClipboardChar" readonly="1" />
                    </group>
                    <group>
                        <group>
                            <field name="can_upload" invisible="1" />
                            <field name="type" invisible="1" />
                            <field name="name" placeholder="Name of the share link" />
                            <field name="action" widget="radio"
                                invisible="type in ['ids'] or not can_upload" />
                        </group>
                        <group>
                            <field name="date_deadline" widget="date" />
                            <label for="email_drop" invisible="action == 'download'" />
                            <div invisible="action == 'download'">
                                <div class="o_row">
                                    <field name="email_drop" />
                                    <div invisible="not email_drop" class="oe_inline">
                                        <div name="alias_def" invisible="not alias_domain">
                                            <field name="alias_id" class="oe_read_only oe_inline"
                                                required="0" />
                                            <div class="oe_edit_only oe_inline" name="edit_alias"
                                                style="display: inline;" dir="ltr">
                                                <field name="alias_name" class="oe_inline" />@ <field
                                                    name="alias_domain" class="oe_inline"
                                                    readonly="1" />
                                            </div>
                                        </div>
                                        <div class="content-group"
                                            invisible="alias_domain">
                                            <!-- <button name="action_configure_email_servers"
                                            icon="fa-arrow-right" type="action" string="Configure
                                            Email Servers" class="btn btn-sm btn-link"/> -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <field name="folder_id" readonly="1" invisible="type in ['ids']" />
                            <field name="include_sub_folders" readonly="1"
                                invisible="type in ['ids']" />
                            <field name="tag_ids" readonly="1" groups="base.group_no_one"
                                widget="many2many_tags"
                                invisible="type in ['ids']" />
                        </group>
                    </group>
                    <group string="Default values for uploaded documents"
                        invisible="action == 'download'">
                        <group>
                            <field name="owner_id" />
                            <field name="partner_id" />
                        </group>
                        <group>
                            <field name="activity_option" />
                        </group>
                    </group>
                    <group string="Activity" name="next_activity" autofocus="autofocus"
                        invisible="not activity_option">
                        <group>
                            <field name="activity_summary" placeholder="e.g. Discuss proposal" />
                        </group>
                        <group>
                            <label for="activity_date_deadline_range" />
                            <div class="o_row">
                                <field name="activity_date_deadline_range" />
                                <field name="activity_date_deadline_range_type" />
                            </div>
                            <field name="activity_user_id" />
                        </group>
                    </group>
                    <group>
                        <field name="activity_note" placeholder="Log a note..." />
                    </group>
                    <field name="document_ids" readonly="1" force_save="1" />
                    <footer>
                        <button special="save" data-hotkey="v" string="Share"
                            class="btn btn-primary" />
                        <button name="open_create_activity_popup"
                            string="Schedule Activity"
                            type="object"
                            class="oe_highlight"
                            icon="fa-calendar-plus-o" />
                        <button string="Send Email" type="object" name="send_email_activity"
                            class="btn-secondary" />
                        <button special="cancel" string="Discard" class="btn btn-secondary"
                            data-hotkey="w" />
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="share_view_form" model="ir.ui.view">
        <field name="name">documents.share.form</field>
        <field name="model">documents.share</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="open_create_activity_popup"
                        string="Schedule Activity"
                        type="object"
                        class="oe_highlight"
                        icon="fa-calendar-plus-o" />
                    <button string="Send Email" type="object" name="send_email_activity"
                        class="btn-secondary" />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_schedule_meeting" type="object"
                            class="oe_stat_button" icon="fa-calendar"
                            context="{'partner_id': partner_id}"
                            string="Meetings">
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="number" readonly="1" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="name" required="1" placeholder="Name of the share link" />
                            <field name="partner_id" />
                            <field name="date_deadline" widget="date" />
                            <field name="folder_id" />
                            <field name="action" widget="radio" options="{'horizontal': true}" />
                            <field name="type" invisible="1" />
                            <field name="can_upload" invisible="1" />
                        </group>
                        <group>
                            <field name="owner_id" />
                            <field name="include_sub_folders" />
                            <field name="tag_ids" widget="many2many_tags" groups="base.group_no_one" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Documents">
                            <field name="document_ids" readonly="1" force_save="1"
                                options="{'no_open': True,'no_create':True,'no_create_edit':True}">
                                <list create="false" edit="false" decoration-info="type == 'empty'"
                                    sample="1">
                                    <field name="id" optional="hide" />
                                    <field name="name" string="Document" required="True" />
                                    <field name="partner_id" optional="show" />
                                    <field name="owner_id" widget="many2one_avatar_user"
                                        optional="show" />
                                    <!-- <field name="type" optional="show" /> -->
                                    <field name="create_date" widget="date" optional="show" />
                                    <field name="activity_exception_decoration"
                                        widget="activity_exception" nolabel="True" />
                                </list>
                            </field>
                        </page>
                        <page string="Document Handover">
                            <field name="attachment_ids" widget="many2many_binary" class="oe_inline" />
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="activity_ids" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>

