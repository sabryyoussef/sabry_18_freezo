<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Document Type Tree View -->
    <record id="view_res_partner_document_type_tree" model="ir.ui.view">
        <field name="name">res.partner.document.type.tree</field>
        <field name="model">res.partner.document.type</field>
        <field name="arch" type="xml">
            <tree string="Document Types">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="category_id"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Document Type Form View -->
    <record id="view_res_partner_document_type_form" model="ir.ui.view">
        <field name="name">res.partner.document.type.form</field>
        <field name="model">res.partner.document.type</field>
        <field name="arch" type="xml">
            <form string="Document Type">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options="{'terminology': 'archive'}"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                        <group>
                            <field name="category_id"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Document Type Search View -->
    <record id="view_res_partner_document_type_search" model="ir.ui.view">
        <field name="name">res.partner.document.type.search</field>
        <field name="model">res.partner.document.type</field>
        <field name="arch" type="xml">
            <search string="Document Types">
                <field name="name"/>
                <field name="code"/>
                <field name="category_id"/>
                <filter string="Active" name="active" domain="[('active','=',True)]"/>
                <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Category" name="group_category" context="{'group_by':'category_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Document Type Action -->
    <record id="action_res_partner_document_type" model="ir.actions.act_window">
        <field name="name">Document Types</field>
        <field name="res_model">res.partner.document.type</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active':1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new document type
            </p>
            <p>
                Document types help categorize and organize partner documents.
            </p>
        </field>
    </record>

    <!-- Document Category Tree View -->
    <record id="view_res_partner_document_category_tree" model="ir.ui.view">
        <field name="name">res.partner.document.category.tree</field>
        <field name="model">res.partner.document.category</field>
        <field name="arch" type="xml">
            <tree string="Document Categories">
                <field name="name"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Document Category Form View -->
    <record id="view_res_partner_document_category_form" model="ir.ui.view">
        <field name="name">res.partner.document.category.form</field>
        <field name="model">res.partner.document.category</field>
        <field name="arch" type="xml">
            <form string="Document Category">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options="{'terminology': 'archive'}"/>
                        </button>
                    </div>
                    <group>
                        <field name="name"/>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                    <notebook>
                        <page string="Document Types">
                            <field name="type_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_base_document_types_root"
              name="Document Types"
              sequence="100"
              web_icon="base_document_types,static/description/icon.png"/>
    
    <menuitem id="menu_document_types"
              name="Document Types"
              parent="menu_base_document_types_root"
              action="action_res_partner_document_type"
              sequence="10"/>
    
    <menuitem id="menu_document_categories"
              name="Document Categories"
              parent="menu_base_document_types_root"
              sequence="20"/>

</odoo>
