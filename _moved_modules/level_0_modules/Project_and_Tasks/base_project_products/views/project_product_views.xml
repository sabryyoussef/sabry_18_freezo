<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Project Product Tree View -->
    <record id="view_project_product_tree" model="ir.ui.view">
        <field name="name">project.project.products.tree</field>
        <field name="model">project.project.products</field>
        <field name="arch" type="xml">
            <list string="Project Products">
                <field name="project_id"/>
                <field name="product_id"/>
                <field name="partner_id"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Project Product Form View -->
    <record id="view_project_product_form" model="ir.ui.view">
        <field name="name">project.project.products.form</field>
        <field name="model">project.project.products</field>
        <field name="arch" type="xml">
            <form string="Project Product">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options="{'terminology': 'archive'}"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="project_id"/>
                            <field name="product_id"/>
                        </group>
                        <group>
                            <field name="partner_id"/>
                            <field name="name"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Remarks">
                            <field name="remarks_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="user_id"/>
                                    <field name="date"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Project Product Search View -->
    <record id="view_project_product_search" model="ir.ui.view">
        <field name="name">project.project.products.search</field>
        <field name="model">project.project.products</field>
        <field name="arch" type="xml">
            <search string="Project Products">
                <field name="project_id"/>
                <field name="product_id"/>
                <field name="partner_id"/>
                <filter string="Active" name="active" domain="[('active','=',True)]"/>
                <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Project" name="group_project" context="{'group_by':'project_id'}"/>
                    <filter string="Product" name="group_product" context="{'group_by':'product_id'}"/>
                    <filter string="Partner" name="group_partner" context="{'group_by':'partner_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Project Product Action -->
    <record id="action_project_product" model="ir.actions.act_window">
        <field name="name">Project Products</field>
        <field name="res_model">project.project.products</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active':1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new project-product association
            </p>
            <p>
                Link products to projects for tracking and management.
            </p>
        </field>
    </record>

    <!-- Project Product Remarks Tree View -->
    <record id="view_project_product_remarks_tree" model="ir.ui.view">
        <field name="name">project.project.products.remarks.tree</field>
        <field name="model">project.project.products.remarks</field>
        <field name="arch" type="xml">
            <list string="Remarks">
                <field name="name"/>
                <field name="user_id"/>
                <field name="date"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Project Product Remarks Form View -->
    <record id="view_project_product_remarks_form" model="ir.ui.view">
        <field name="name">project.project.products.remarks.form</field>
        <field name="model">project.project.products.remarks</field>
        <field name="arch" type="xml">
            <form string="Remark">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="user_id"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="active"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                    <group>
                        <field name="project_product_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_base_project_products_root"
              name="Project Products"
              parent="project.menu_main_pm"
              sequence="50"/>
    
    <menuitem id="menu_project_products"
              name="Products"
              parent="menu_base_project_products_root"
              action="action_project_product"
              sequence="10"/>

</odoo>
