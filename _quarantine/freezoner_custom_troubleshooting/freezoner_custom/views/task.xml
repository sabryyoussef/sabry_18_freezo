<odoo>
    <record model="ir.actions.server" id="action_open_mail">
        <field name="name">Send Email</field>
        <field name="model_id" ref="project.model_project_task" />
        <field name="binding_model_id" ref="project.model_project_task" />
        <field name="state">code</field>
        <field name="code">
            action = records.open_mail()
        </field>
    </record>
    <record id="view_task_kanban_inherit_my_task" model="ir.ui.view">
        <field name="name">task_client_kanban</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_kanban_inherit_my_task" />
        <field name="mode">extension</field>
        <field name="arch" type="xml">
            <xpath expr="//t[@t-name='card']/main" position="after">
                <div>
                    <a t-if="record.project_id.raw_value"
                        t-attf-href="/web#id={{record.project_id.raw_value}}&amp;model=project.project&amp;view_type=form"
                        class="o_kanban_record_title"
                        style="font-weight: bold; color: green;">
                        View Project
                    </a>
                </div>
            </xpath>
        </field>
    </record>

    <record id="project_subtask_tree" model="ir.ui.view">
        <field name="name">project.subtask.tree</field>
        <field name="model">project.task</field>
        <field name="arch" type="xml">
            <list string="Tasks" multi_edit="1" sample="1" js_class="project_task_list">
                <field name="message_needaction" invisible="1" readonly="1" />
                <field name="is_closed" invisible="1" />
                <field name="sequence" invisible="1" readonly="1" />
                <field name="allow_milestones" invisible="1" />
                <field name="priority" widget="priority" optional="show" nolabel="1" />
                <field name="id" optional="hide" />
                <field name="name" widget="name_with_subtask_count" />
                <field name="project_id" widget="project_private_task" optional="show" readonly="1"
                    options="{'no_open': 1}" />
                <field name="milestone_id" context="{'default_project_id': project_id}"
                    groups="project.group_project_milestone" optional="hide" />
                <field name="partner_id" optional="hide" />
                <field name="parent_id" optional="hide" groups="base.group_no_one" />
                <field name="user_ids" optional="show" widget="many2many_avatar_user"
                    domain="[('share', '=', False), ('active', '=', True)]"
                    options="{&quot;no_quick_create&quot;: True}" />
                <field name="company_id" groups="base.group_multi_company" optional="show"
                    readonly="True" />
                <field name="company_id" invisible="1" />
                <field name="activity_ids" string="Next Activity" widget="list_activity"
                    optional="show" />
                <field name="date_deadline" optional="hide" widget="remaining_days"
                    invisible="state in ['1_done', '1_canceled']" />
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"
                    optional="show"
                    context="{'project_id': project_id}" />
                <field name="rating_active" invisible="1" />
                <field name="rating_last_text" string="Rating"
                    decoration-danger="rating_last_text == 'ko'"
                    decoration-warning="rating_last_text == 'ok'"
                    decoration-success="rating_last_text == 'top'"
                    class="fw-bold" widget="badge" optional="hide"
                    groups="project.group_project_rating" />
                <!--                <field name="legend_normal" invisible="1"/>-->
                <!--                <field name="legend_done" invisible="1"/>-->
                <!--                <field name="legend_blocked" invisible="1"/>-->
                <!--                <field name="kanban_state" widget="state_selection" optional="show"
                options="{'hide_label': True}"-->
                <!--                       nolabel="1" required="0"/>-->
                <field name="stage_id" invisible="context.get('set_visible',False)" optional="show"
                    readonly="not context.get('default_project_id')" />
                <field name="recurrence_id" invisible="1" />
                <field name="document_ids" invisible="1" widget="many2many_tags" />
                <button name="next_stage" type="object" string="Next Stage" class="oe_highlight" />
                <button name="previous_stage" type="object" string="Previous Stage"
                    class="oe_highlight" />
            </list>
        </field>
    </record>
    <record id="project_task_product" model="ir.ui.view">
        <field name="name">project.task.product</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" name="action_view_document" type="object"
                    icon="fa-file-text-o" modifiers="{'invisible':[('document_ids','=',[])]}">
                    <field string="Documents" name="document_count" widget="statinfo" />
                    <!-- <field name="document_ids" invisible="1" /> -->
                </button>
            </xpath>
            <xpath expr="//field[@name='stage_id']" position="replace">
                <field name="stage_id" widget="statusbar"
                    modifiers="{'invisible': [('project_id', '=', False), ('stage_id', '=', False)]}" />
            </xpath>
            <xpath expr="//header" position="inside">
                <!--                <button name="action_assignees" type="object" string="Assignees" class="btn
                btn-warning"/>-->
                <!--                <button name="create_documents" type="object" string="Create Documents"-->
                <!--                        modifiers="{'invisible':[('name','not in', ['Upload Corporate Documents And
                Rename All Files','Uploading Deliverables',-->
                <!--                      'Documents To Be Collected','Collecting Required Documents'])]}"-->
                <!--                />-->
                <field name="is_done" invisible="1" />
                <button name="action_done" type="object" string="Done"
                    modifiers="{'invisible': [('is_done', '=', True)]}"
                    groups="freezoner_custom.task_done_button_group" class="oe_highlight" />
                <button name="next_stage" type="object" string="Next Stage" class="oe_highlight" />
                <button name="previous_stage" type="object" string="Previous Stage"
                    class="oe_highlight" />
            </xpath>
            <xpath
                expr="//page[@name='sub_tasks_page']/field[@name='child_ids']/list/field[@name='stage_id']"
                position="after">
                <!--                <button name="action_next_stage" type="object" string="Next Stage"
                class="oe_highlight"/>-->
                <!--                <button name="previous_stage" type="object" string="Previous Stage"
                class="oe_highlight"/>-->
            </xpath>
            <xpath expr="//page[@name='description_page']" position="after">
                <page name="documents" string="Deliverable Document"
                    modifiers="{'invisible':[('name','not in', ['Upload Corporate Documents And Rename All Files','Uploading Deliverables'])]}">
                    <field name="document_type_ids">
                        <list editable="bottom">
                            <field name="attachment_ids" widget="many2many_binary" class="oe_inline"
                                required="1" />
                            <field name="document_id"
                                options="{'no_quick_create':True,'no_create_edit':True,'no_create': True}"
                                domain="[('name', '!=', False)]"
                                required="1" />
                            <field name="name" required="1" />
                            <field name="issue_date" />
                            <field name="is_required_expiration" />
                            <field name="expiration_date"
                                modifiers="{'required': [('is_required_expiration', '=', True)]}" />
                            <field name="is_verify" />
                            <field name="is_required" />
                            <field name="partner_id" optional="hide" />
                        </list>
                    </field>
                </page>
                <page name="required_documents" string="Required Document"
                    modifiers="{'invisible':[('name','not in', ['Documents To Be Collected','Collecting Required Documents'])]}">
                    <!--                    <button name="add_partners_to_lines" type="object" string="Move old data"
                    invisible="0"/>-->
                    <field name="document_required_type_ids">
                        <list editable="bottom">
                            <field name="attachment_ids" widget="many2many_binary" class="oe_inline" />
                            <field name="document_id"
                                options="{'no_quick_create':True,'no_create_edit':True,'no_create': True}"
                                domain="[('name', '!=', False)]"
                                required="1" />
                            <field name="name" required="0" />
                            <field name="issue_date" required="0" />
                            <field name="is_required_expiration" />
                            <field name="expiration_date"
                                modifiers="{'required': [('is_required_expiration', '=', True)]}" />
                            <field name="is_required" />
                            <field name="is_verify" />
                            <field name="partner_id" optional="hide" />
                            <field name="is_moved" invisible="1" />
                            <field name="is_ready" invisible="1" />
                            <button string="Fetch Documents" name="fetch_document" type="object"
                                icon="fa-thumbs-up"
                                modifiers="{'invisible': [('attachment_ids', '!=', [])]}" />
                        </list>
                    </field>
                </page>
                <page name="required_documents" string="Required Document"
                    modifiers="{'invisible':[('name','not in', ['Processing'])]}">
                    <field name="document_required_readonly_type_ids">
                        <list editable="bottom">
                            <field name="attachment_ids" widget="many2many_binary" class="oe_inline"
                                required="1" />
                            <field name="document_id"
                                options="{'no_quick_create':True,'no_create_edit':True,'no_create': True}"
                                domain="[('name', '!=', False)]"
                                required="1" />
                            <field name="name" required="1" />
                            <field name="issue_date" />
                            <field name="is_required_expiration" />
                            <field name="expiration_date"
                                modifiers="{'required': [('is_required_expiration', '=', True)]}" />
                            <field name="is_required" />
                            <field name="is_verify" />
                            <field name="partner_id" optional="hide" />
                            <field name="is_moved" invisible="1" />
                            <field name="is_ready" invisible="1" />
                        </list>
                    </field>
                    <field name="document_required_type_processing_ids">
                        <list editable="bottom">
                            <field name="attachment_ids" widget="many2many_binary" class="oe_inline"
                                required="1" />
                            <field name="document_id"
                                options="{'no_quick_create':True,'no_create_edit':True,'no_create': True}"
                                domain="[('name', '!=', False)]"
                                required="1" />
                            <field name="name" required="1" />
                            <field name="issue_date" />
                            <field name="is_required_expiration" />
                            <field name="expiration_date"
                                modifiers="{'required': [('is_required_expiration', '=', True)]}" />
                            <field name="is_required" />
                            <field name="is_verify" />
                            <field name="partner_id" optional="hide" />
                            <field name="is_moved" invisible="1" />
                            <field name="is_ready" invisible="1" />
                        </list>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
    <record id="project_task_document" model="ir.ui.view">
        <field name="name">project.task</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="documents_project.view_task_form2_document_inherit" />
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_view_documents_project_task']" position="replace">
            </xpath>
        </field>
    </record>
</odoo>